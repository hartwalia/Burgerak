<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/fragment_user_stall_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eb6007"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/fragment_user_stall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Zally's Burger Stand"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_user_stall_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_user_stall_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="My Stall"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_user_stall_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_user_stall_name_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Zally's Burger Stand"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_user_stall_location_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Cyberjaya"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_user_stall_time_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Operation hours : 1800 - 0130"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/fragment_user_stall_day_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Closed days : Mondays, Thursdays"
                android:textSize="16sp"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>